<LinearLayout
        android:layout_width="match_parent"  android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/layNameSection" android:layout_weight="1" android:orientation="horizontal">

        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:gravity="center" android:text="NAME of the COUNTER" android:textColor="#000000"
        android:textSize="20sp" android:textStyle="bold"
        android:id="@+id/txtCounterName_Add"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/layCounterSection" android:layout_weight="1" android:orientation="horizontal">

        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:gravity="center" android:text="Value of the COUNTER" android:textColor="#FA3D00"
                  android:textSize="26sp"
                  android:id="@+id/txtCounterValue_Add"/>

    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/layButtonsSection" android:layout_weight="1">

        <ImageButton android:layout_width="50dp"  android:layout_height="50dp"
        android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                     android:layout_marginBottom="10dp" android:src="@drawable/ic_factor_adjust"
        android:background="#00000000" android:scaleType="fitXY" android:tint="#150050"
        android:id="@+id/btnAdjustCountFactor"/>

        <ImageButton android:layout_width="80dp" android:layout_height="80dp"
        android:layout_toEndOf="@id/btnAdjustCountFactor" android:layout_centerVertical="true"
        android:src="@drawable/ic_arrow_up" android:background="#00000000"
                     android:layout_marginStart="10dp"
        android:scaleType="fitXY" android:scaleX="2" android:scaleY="2"
                     android:tint="#25B625"
        android:id="@+id/btnCountUp"/>

        <ImageButton android:layout_width="80dp" android:layout_height="80dp"
                     android:layout_toStartOf="@id/btnAdjustCountFactor" android:layout_centerVertical="true"
                     android:src="@drawable/ic_arrow_down" android:background="#00000000"
                     android:layout_marginEnd="10dp"
                     android:scaleType="fitXY" android:scaleX="2" android:scaleY="2"
                     android:tint="#EB1C0D"
                     android:id="@+id/btnCountDown"/>

    </RelativeLayout>


</LinearLayout>